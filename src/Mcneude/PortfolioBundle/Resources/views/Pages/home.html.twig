{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'PortfolioBundle::base.html.twig' %}


{% block body %}
    <div class="full full-home">
        {% if home is not null %}
            <header>
                <h1>{{ home.titre }}</h1>
                <img src={{ asset("/bundles/portfolio/images/content/home") }}{{ home.urlImage }} />
                <div class="accroche content middle">
                    {{ home.accroche | raw }}
                </div>
            </header>

            {% if projetsImages is not empty %}
            <!-- SLIDESHOW -->
                <article id="derniers-projets">
                    <h1> Mes cinq derniers projets en images</h1>
                    <div class="slideshow flexslider">
                        <ul class="slides">
                            {% for image in projetsImages %}
                                <li>
                                    <a data-lightbox="image-diapo" href="{{ asset('/bundles/portfolio/images/content/projets') }}{{ image.url }}">
                                        <img src="{{ asset('/bundles/portfolio/images/content/projets') }}{{ image.url }}"  alt="{{ image.nom }}" /></a>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </article>
            {% endif %}

            <article class="row">
                <div class="content box">
                    <h1>En ce moment je me documente sur...</h1>
                    <div class="content">
                        {{ home.apprendre }}
                    </div>
                </div>
                <div class="content box">
                    <h1>En ce moment je travaille sur...</h1>
                    <div class="content">
                        {{ home.construire }}
                    </div>
                </div>
            </article>
        {% endif %}
    </div>

{% endblock %}