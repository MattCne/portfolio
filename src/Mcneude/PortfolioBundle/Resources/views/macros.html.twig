{% macro choice_url( slug, url_external ) %}
    {%- if slug is not empty  -%}
        href="{{ path( 'projet_interieur' , { 'slug': slug }) }}"
    {%- elseif url_external is not empty -%}
        href="http://{{-  url_external -}}"
    {%- endif -%}
{% endmacro %}

{% macro is_current_route(route) %}
    {%- if app.request.attributes.get('_route') == route -%}
        {{- ' class="active"' -}}
    {%- endif -%}
{% endmacro %}
